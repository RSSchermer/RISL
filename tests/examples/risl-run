echo "Recompiling rislc to ensure it is up to date..."
RUSTFLAGS=-Awarnings cargo build --bin=rislc --release
echo "Warming up build scripts..."
RUSTFLAGS=-Awarnings cargo check --package=$1 --target-dir=target/risl
echo "Compiling RISL artifacts..."
RUSTFLAGS=-Awarnings RUST_BACKTRACE=full RUSTC_WRAPPER=target/release/rislc cargo build --package=$1 --target-dir=target/risl
echo "Building and running the package..."
RUSTFLAGS=-Awarnings RUST_BACKTRACE=full cargo run --package=$1
